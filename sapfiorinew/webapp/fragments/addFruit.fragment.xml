<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog id="addDataDialog" title="Add New Fruit Data">
        <content>
            <FlexBox >
                <VBox>
                    <Label text="Name"/>
                    <Input id="nameInput" placeholder="Enter name"/>
                    <Label text="Color"/>
                    <Input id="colorInput" placeholder="Enter color"/>
                    <Label text="Taste"/>
                    <Input id="tasteInput" placeholder="Enter taste"/>
                    <Label text="Size"/>
                    <Input id="sizeInput" placeholder="Enter size"/>
                    <Label text="Price"/>
                    <Input id="priceInput" placeholder="Enter price"/>
                    <Label text="Currency"/>
                    <Input id="currencyInput" placeholder="Enter currency"/>
                    <Label text="Health Benefits"/>
                    <Input id="healthInput" placeholder="Enter health benefits"/>
                    <Label text="Season"/>
                    <Input id="seasonInput" placeholder="Enter season"/>
                    <Label text="Availability"/>
                    <Input id="availabilityInput" placeholder="Enter availability"/>
                    <Label text="Image URL"/>
                    <Input id="imageInput" placeholder="Enter image URL"/>
                </VBox>
            </FlexBox>
        </content>


        <Button text="Add" press="onAddDataPress"/>
        <Button text="Cancel" press="onCancelPress"/>


    </Dialog>
</core:FragmentDefinition>